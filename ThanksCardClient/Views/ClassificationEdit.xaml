<UserControl x:Class="ThanksCardClient.Views.ClassificationEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThanksCardClient.Views"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1366">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Views/分類登録画面.png"/>
        </Grid.Background>
        <TextBox Text="{Binding Classification.ClassificationName}" HorizontalAlignment="Left" Height="49" Margin="392,369,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="369" FontSize="36" BorderThickness="0,0,0,0" SnapsToDevicePixels="True"/>
        <Button Command="{Binding SubmitCommand}" HorizontalAlignment="Center" Height="60" Margin="0,530,0,0" VerticalAlignment="Top" Width="156" BorderBrush="#00000000">
            <Button.Background>
                <ImageBrush ImageSource="/Views/変更ボタン.png"/>
            </Button.Background>
        </Button>
        <Button Command="{Binding HomeCommand}" HorizontalAlignment="Center" Height="52" Margin="0,627,0,0" VerticalAlignment="Top" Width="156" Opacity="0"/>
    </Grid>
</UserControl>
