<UserControl x:Class="ThanksCardClient.Views.ClassificationEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThanksCardClient.Views"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1366">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Views/分類変更画面.png"/>
        </Grid.Background>
        <TextBox Text="{Binding Classification.ClassificationName}" HorizontalAlignment="Left" Height="49" Margin="504,294,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="369" FontSize="36" BorderThickness="0,0,0,0" SnapsToDevicePixels="True" Opacity="0.9"/>
        <Button Command="{Binding SubmitCommand}" HorizontalAlignment="Center" Height="50" Margin="0,532,0,0" VerticalAlignment="Top" Width="150" BorderBrush="#00000000" Opacity="0" Cursor="Hand">
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>
        <Button Command="{Binding HomeCommand}" HorizontalAlignment="Center" Height="50" Margin="0,627,0,0" VerticalAlignment="Top" Width="150" Opacity="0" Cursor="Hand"/>
    </Grid>
</UserControl>